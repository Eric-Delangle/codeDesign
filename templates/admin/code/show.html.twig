{% extends 'base.html.twig' %}

{% block title %}Code{% endblock %}

{% block body %}
    <h1>Code</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ code.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ code.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ code.slug }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ code.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ code.createdAt ? code.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ code.updatedAt ? code.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ code.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('code_index') }}">back to list</a>

    <a href="{{ path('code_edit', {'id': code.id}) }}">edit</a>

    {{ include('code/_delete_form.html.twig') }}
{% endblock %}
