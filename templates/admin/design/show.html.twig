{% extends 'base.html.twig' %}

{% block title %}Design
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Design</h1>

		<table class="table mt-3">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ design.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ design.name }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ design.slug }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ design.picture }}</td>
				</tr>
				<tr>
					<th>Créé le</th>
					<td>{{ design.createdAt ? design.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Modifié le</th>
					<td>{{ design.updatedAt ? design.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ design.description }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_design_index') }}">back to list</a>

		<a href="{{ path('admin_design_edit', {'slug': design.slug}) }}">edit</a>

		{{ include('admin/design/_delete_form.html.twig') }}
	</div>
{% endblock %}
