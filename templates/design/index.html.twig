{% extends 'base.html.twig' %}

{% block title %}Les designs
{% endblock %}

{% block body %}

	<div id="#bloc-images" class="container">
		<h1 class="text-center mt-5 intro back">Le graphisme</h1>

		<div id="portfolio" class="mt-5">
			{% for design in designs %}

				<figure class="images text-center">
					<a href="{{ path('design_show', {'slug': design.slug}) }}"><img src=" {{ asset(['images/photos/', design.picture]|join) }} " class="images-design" alt="design"></a>
					<figcaption>
						<div class="text-center intro name-size">
							<h3>{{ design.name | capitalize}}</h3>

						</div>
					</figcaption>
				</figure>

			{% else %}

				<p>Pas de graphismes trouv√©s.</p>

			{% endfor %}


		</div>


	</div>
	<div class="container text-center">
		<button class="btn btn-success btn-sm">
			<a href="{{ path('home') }}" class="bouton">Accueil</a>
		</button>
	</div>

{% endblock %}
